<config>
	<tabs>
		<localepacks translate="label" module="localepackca">
			<label>Locale Packs</label>
			<sort_order>150</sort_order>
		</localepacks>
	</tabs>
	<sections>
		<localepackca module="localepackca">
			<label>Locale fr_CA</label>
			<tab>localepacks</tab>
			<sort_order>71</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>0</show_in_website>
			<show_in_store>0</show_in_store>
			<groups>
				<maininfo translate="label" module="localepackca">
					<label>French language package fr_CA - Community Edition (CE)</label>
					<frontend_type>text</frontend_type>
                    <frontend_model>localepackca/system_config_form_fieldset_instructions</frontend_model>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
				</maininfo>

				<tipps_translation translate="label" module="localepackca">
					<label>Using your own translations</label>
					<frontend_type>text</frontend_type>
					<sort_order>50</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<comment>More Infos here soon!</comment>
				</tipps_translation>

				<additional_extensions translate="label" module="localepackca">
					<label>Recommended extensions</label>
					<frontend_type>text</frontend_type>
                    <frontend_model>localepackca/system_config_form_fieldset_extensions</frontend_model>
					<sort_order>60</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
				</additional_extensions>
			</groups>
		</localepackca>
	</sections>
</config>